#                                        BD_MOTOR=`$SSH@$ENGINE sudo netstat -natp | grep 1521 | grep ESTABLISHED | wc -l`

                                                if [[ $(netstat -natp | grep 1521 | grep ESTABLISHED | wc -l) -eq 0 ]]; then

